{
  "name": "Java Project",
  "dockerFile": "Dockerfile",
  "context": "..",
  "customizations": {
    "vscode": {
      "settings": {
        "java.jdt.ls.java.home": "/opt/java/openjdk",
        "java.import.gradle.enabled": true
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-maven"
      ]
    }
  },
  "postCreateCommand": "mvn install",
  "remoteUser": "vscode"
}